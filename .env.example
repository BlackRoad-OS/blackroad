# BlackRoad OS - Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# =============================================================================
# DEPLOYMENT PLATFORMS
# =============================================================================

# Railway (https://railway.app)
RAILWAY_TOKEN=

# Vercel (https://vercel.com)
VERCEL_TOKEN=
VERCEL_ORG_ID=
VERCEL_PROJECT_ID=

# Cloudflare (https://cloudflare.com)
CLOUDFLARE_API_TOKEN=
CLOUDFLARE_ACCOUNT_ID=
CLOUDFLARE_ZONE_ID=

# DigitalOcean (https://digitalocean.com)
DIGITALOCEAN_ACCESS_TOKEN=
DIGITALOCEAN_SPACES_KEY=
DIGITALOCEAN_SPACES_SECRET=

# =============================================================================
# CONTAINER REGISTRIES
# =============================================================================

# Docker Hub
DOCKER_USERNAME=
DOCKER_PASSWORD=

# GitHub Container Registry (uses GITHUB_TOKEN)
# GCR_JSON_KEY=  # Google Container Registry

# =============================================================================
# TUNNEL PROVIDERS
# =============================================================================

# Cloudflare Tunnel
CLOUDFLARE_TUNNEL_TOKEN=
CLOUDFLARE_TUNNEL_ID=

# ngrok
NGROK_AUTHTOKEN=

# Tailscale
TAILSCALE_AUTH_KEY=
TAILSCALE_API_KEY=

# =============================================================================
# PRODUCTIVITY INTEGRATIONS
# =============================================================================

# Asana (https://developers.asana.com)
ASANA_ACCESS_TOKEN=
ASANA_WORKSPACE_GID=

# Notion (https://developers.notion.com)
NOTION_API_KEY=
NOTION_DATABASE_ID=

# =============================================================================
# AUTHENTICATION
# =============================================================================

# Clerk (https://clerk.com)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=
CLERK_WEBHOOK_SECRET=

# =============================================================================
# PAYMENTS
# =============================================================================

# Stripe (https://stripe.com)
STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_ID_PRO_MONTHLY=
STRIPE_PRICE_ID_PRO_YEARLY=

# =============================================================================
# AI/ML
# =============================================================================

# Hugging Face (https://huggingface.co)
HUGGINGFACE_TOKEN=
HF_API_KEY=

# OpenAI (for comparison/fallback)
# OPENAI_API_KEY=

# =============================================================================
# EDGE/IOT DEPLOYMENT
# =============================================================================

# Raspberry Pi
PI_HOST=
PI_USER=pi
PI_SSH_KEY=  # Base64 encoded private key

# =============================================================================
# APPLICATION
# =============================================================================

# General
NODE_ENV=development
APP_URL=http://localhost:3000

# Database (if applicable)
DATABASE_URL=

# Session/JWT
SESSION_SECRET=
JWT_SECRET=

# =============================================================================
# GITHUB (usually provided automatically in Actions)
# =============================================================================

# GITHUB_TOKEN=
# GH_PAT=  # Personal Access Token with additional permissions
